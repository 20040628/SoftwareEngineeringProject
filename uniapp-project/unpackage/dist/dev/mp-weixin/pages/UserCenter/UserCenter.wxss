.page {
  background: #f5f5f5;
  min-height: 100vh;
}
.page .action {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx;
  background: #4B79EC;
}
.page .action view {
  padding: 10rpx;
  margin: 0 10rpx;
  border-radius: 8rpx;
  width: 45rpx;
  height: 45rpx;
}
.page .action view:active {
  background: #ccc;
}
.page .action view image {
  width: 45rpx;
  height: 45rpx;
}
.page .user {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: #4B79EC;
}
.page .user:active {
  background: #f0f0f0;
}
.page .user .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  border: 3px solid #3a5fb6;
}
.page .user .right {
  width: 30rpx;
  height: 30rpx;
}
.page .user .name {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.page .user .name text {
  color: #fff;
}
.page .user .name text:nth-child(1) {
  font-size: 16px;
  font-weight: bold;
}
.page .user .name text:nth-child(2) {
  font-size: 12px;
  color: #f0f0f0;
}
.page .card {
  background: #fff;
  box-sizing: border-box;
  width: 700rpx;
  margin: auto;
  padding: 15rpx;
  margin-top: 20rpx;
  border-radius: 12rpx;
}
.page .card .menu .item {
  display: flex;
  height: 100rpx;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 700rpx;
}
.page .card .menu .item:active {
  background: #f0f0f0;
}
.page .card .menu .item image {
  height: 45rpx;
  width: 45rpx;
}
.page .card .menu .item view {
  font-size: 14px;
  color: #444;
  padding-left: 15rpx;
  box-sizing: border-box;
  width: calc(100% - 100rpx);
}
.page .card .menu .item .arrow {
  width: 26rpx;
  height: 26rpx;
}