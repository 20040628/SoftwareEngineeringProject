.page {
  display: flex;
  min-height: 100vh;
  background: #f5f5f5;
}
.sidebar {
  width: 250px;
  background: #58C4C9;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
  color: #58C4C9;
  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
}
.sidebar .user {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}
.sidebar .user image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: #ccc;
  margin-bottom: 10px;
}
.sidebar .user text {
  font-size: 16px;
  font-weight: bold;
}
.sidebar .menu {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sidebar .menu .menu-item {
  width: 90%;
  display: flex;
  align-items: center;
  padding: 10px;
  margin: 5px 0;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.3s ease-in-out;
}
.sidebar .menu .menu-item image {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
.sidebar .menu .menu-item text {
  font-size: 14px;
  flex: 1;
}
.sidebar .menu .menu-item:hover, .sidebar .menu .menu-item.active {
  background: rgba(255, 255, 255, 0.2);
}
.content {
  flex: 1;
  padding: 20px;
  background: #fff;
  border-radius: 10px;
  margin: 20px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}
.content .title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
}
@media screen and (max-width: 768px) {
.page {
    flex-direction: column;
}
.sidebar {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 10px 0;
    box-shadow: none;
}
.menu {
    flex-direction: row;
    width: 100%;
    justify-content: space-around;
}
.menu-item {
    width: auto;
    flex-direction: column;
    align-items: center;
}
.menu-item text {
    font-size: 12px;
}
.content {
    margin: 0;
    border-radius: 0;
    padding: 15px;
}
